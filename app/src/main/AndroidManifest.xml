    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.categoryViews.activities.CategoryActivity" />
        <activity android:name=".views.productDetailViews.activities.ProductDetailActivity" />
        <activity android:name=".views.productViews.activities.ProductActivity" />
        <activity android:name=".Splashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".views.Register.RegisterActivity" />
        <activity android:name=".views.addEditProductViews.activities.AddEditProductActivity" />
        <activity android:name=".views.savedProductViews.activities.SavedProductActivity" />
        <activity android:name=".views.savedProductDetailViews.activities.SavedProductDetailActivity" />
        <activity android:name=".views.StoreDetail.ChiTietQuanAnActivity" />
        <activity android:name=".views.HomePageRes.HomePageResActivity" />
        <activity android:name=".views.newProductDetailViews.activities.NewProductDetailActivity" />
        <activity android:name=".views.SearchViews.SeachViewActivity" />
    </application>

</manifest>